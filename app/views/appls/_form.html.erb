<% if @appl.errors.any?  %>
  	<ol>
    	<% @appl.errors.full_messages.each do |msg| %>
      		<li> <%= msg %> </li>
		<% end %>
	</ol>	
<% end %>


<%= form_for @appl do |f| %>
	<p>
		<%= f.label :resume %>
		<%= f.text_field :resume %>
	</p>

	<p>
		<%= f.label :cover_letter %>
		<%= f.text_field :cover_letter %>
	</p>

	<%= f.submit %>

<% end %>